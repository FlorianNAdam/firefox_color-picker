{
  "manifest_version": 3,
  "name": "Cursor Color Picker",
  "version": "1.0",
  "description": "Shows the color under the cursor.",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_end"
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "color-picker@example.com"
    }
  }
}